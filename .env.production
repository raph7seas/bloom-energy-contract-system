# Bloom Energy Contract System - Production Environment
# Copy this to .env.production.local and fill in your production values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/bloom_contracts?schema=public"

# Server Configuration
NODE_ENV="production"
PORT=4003

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET="your-super-secure-jwt-secret-key-change-this"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="104857600"  # 100MB

# AI Service Configuration - Claude/Anthropic Only
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# AI Provider Settings - Claude Only for Security
DEFAULT_AI_PROVIDER="anthropic"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
ENABLE_BETA_MODELS="false"
COST_TRACKING_ENABLED="true"
ANTHROPIC_MAX_TOKENS="4000"
ANTHROPIC_TEMPERATURE="0.7"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/application.log"

# Security Configuration
CORS_ORIGIN="https://yourdomain.com,https://app.yourdomain.com"
RATE_LIMIT_WINDOW="900000"    # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# AWS Configuration
AWS_REGION="us-west-2"
ENABLE_AWS_SECRETS_MANAGER="true"
ENABLE_VPC_ENDPOINT="true"
AI_REQUEST_TIMEOUT="30000"

# Redis Configuration (if using external Redis)
REDIS_URL="redis://username:password@host:6379"
REDIS_PASSWORD="your-redis-password"

# PostgreSQL Configuration (if using external DB)
POSTGRES_PASSWORD="your-postgres-password"

# Production Features
ENABLE_API_DOCS="false"
ENABLE_SWAGGER="false"
ENABLE_PROFILING="false"

# Health Check Configuration
HEALTH_CHECK_TIMEOUT="5000"
HEALTH_CHECK_INTERVAL="30000"