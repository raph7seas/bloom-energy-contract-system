# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/bloom_contracts"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
NODE_ENV="development"
PORT=3001

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# AI Service Configuration
# Choose AI provider: "anthropic", "bedrock", or "openai"
DEFAULT_AI_PROVIDER="bedrock"

# Anthropic API (Direct - Fallback)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# AWS Bedrock (Primary - Native PDF Support)
# Model options:
# - anthropic.claude-3-5-sonnet-20241022-v2:0 (Recommended)
# - anthropic.claude-3-5-haiku-20241022-v1:0 (Faster, cheaper)
# - anthropic.claude-sonnet-4-20250514-v1:0 (Latest, if available)
BEDROCK_MODEL_ID="anthropic.claude-3-5-sonnet-20241022-v2:0"
BEDROCK_MAX_TOKENS="8000"
BEDROCK_TEMPERATURE="0.3"
BEDROCK_TOP_K="250"
BEDROCK_TOP_P="1"

# Enable native PDF processing (no OCR needed)
BEDROCK_PDF_EXTRACTION="true"

# OpenAI API (Fallback)
OPENAI_API_KEY="your-openai-api-key-here-optional"

# OCR/Textract Configuration
USE_LOCAL_TEXTRACT="true"
USE_NATIVE_TESSERACT="false"
OCR_LANG="eng"
OCR_CONFIDENCE_THRESHOLD="0.7"

# AWS Textract Configuration
AWS_TEXTRACT_ENABLED="true"
PREFER_AWS_TEXTRACT="false"
MAX_LOCAL_TEXTRACT_SIZE="10485760"  # 10MB - use local for smaller files
AWS_COST_THRESHOLD="5.00"           # Maximum cost per document in USD
AWS_S3_BUCKET="bloom-energy-contract-documents"
AWS_TEXTRACT_ROLE_ARN=""            # Optional: IAM role for Textract
AWS_SNS_TOPIC_ARN=""                # Optional: SNS topic for async notifications

# Bulk Operations Configuration
MAX_CONCURRENT_BULK_OPS="3"
BULK_BATCH_SIZE="10"
BULK_MAX_FILES="50"
BULK_EXPORT_RETENTION_HOURS="48"

# AWS Configuration
AWS_REGION="us-west-2"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_SESSION_TOKEN=""  # For AWS SSO temporary credentials

# S3 Configuration
S3_CONTRACT_BUCKET="bloom-contracts"
USE_LOCAL_STORAGE="false"  # Set to "true" for local development without S3

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@bloomenergy.com"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# Logging Configuration
LOG_LEVEL="debug"
LOG_FILE="./logs/application.log"

# Security Configuration
CORS_ORIGIN="http://localhost:4002,http://localhost:3000,http://localhost:5173"
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# Development/Production Flags
ENABLE_API_DOCS="true"
ENABLE_SWAGGER="true"
ENABLE_PROFILING="false"