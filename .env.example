# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/bloom_contracts"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
NODE_ENV="development"
PORT=3001

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# AI Service Configuration
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here-optional"

# OCR/Textract Configuration
USE_LOCAL_TEXTRACT="true"
USE_NATIVE_TESSERACT="false"
OCR_LANG="eng"
OCR_CONFIDENCE_THRESHOLD="0.7"

# Bulk Operations Configuration
MAX_CONCURRENT_BULK_OPS="3"
BULK_BATCH_SIZE="10"
BULK_MAX_FILES="50"
BULK_EXPORT_RETENTION_HOURS="48"

# External Services (Optional)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="bloom-contracts-storage"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@bloomenergy.com"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# Logging Configuration
LOG_LEVEL="debug"
LOG_FILE="./logs/application.log"

# Security Configuration
CORS_ORIGIN="http://localhost:4002,http://localhost:3000,http://localhost:5173"
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# Development/Production Flags
ENABLE_API_DOCS="true"
ENABLE_SWAGGER="true"
ENABLE_PROFILING="false"